<h1><%= t 'navigation.login' %></h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <%= submit_tag t('navigation.login') %> | 
  <%= link_to t('navigation.back'), root_path %>

<% end %>